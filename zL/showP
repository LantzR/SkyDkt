-- showP - show peripheral methods

local tArgs = { ... }
local side = tArgs[1]
-- side is either "front", "back", "left", "right", "top" or "bottom"

tPer = peripheral.getMethods(side)

for i = 1, #tPer, 1 do
  print(tPer[i])
end

